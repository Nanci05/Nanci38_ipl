<?@page contentType="text/html" pageEncoding="UTF-8"?>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Caesar Cipher</title>
</head>
<body>
    <h1>Caesar Cipher</h1>
    <form method="post">
        <label for="message">Enter plaintext message:</label>
        <input type="text" id="message" name="message"><br><br>
        <label for="shift">Enter shift value:</label>
        <input type="number" id="shift" name="shift"><br><br>
        <input type="submit" value="Encrypt">
    </form>
    <?
        if (request.getMethod().equals("POST")) {
            String plaintext = request.getParameter("message").toUpperCase();
            int shift = Integer.parseInt(request.getParameter("shift"));
            String ciphertext = "";
            for (int i = 0; i < plaintext.length(); i++) {
                char c = plaintext.charAt(i);
                if (Character.isLetter(c)) {
                    c = (char) (((c - 'A' + shift) % 26) + 'A');
                }
                ciphertext += c;
            }
    ?>
    
    <?
        }
    ?>
</body>
